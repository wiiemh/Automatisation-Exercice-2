{
    "require": {
        "php": "^8.1",
        "vlucas/phpdotenv": "^5.6",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "slim/php-view": "^3.2",
        "php-di/php-di": "^7.0",
        "slim/twig-view": "^3.3",
        "slim/flash": "^0.4.0",
        "illuminate/database": "^11.0",
        "symfony/console": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1",
        "fakerphp/faker": "^1.24"
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs --standard=phpcs.xml src",
        "phpstan": "vendor/bin/phpstan analyse src --level 7"
    }
}
